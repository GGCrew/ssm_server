<%- set_per_action_css -%>

<div class="photo_section">
	<div class="sidebar">
		<div class="buttons">
			<%= link_to('Approve', approve_photo_path(-1), {remote: true, class: 'approve', style: "display: #{@approve_button_css};"}) -%></li>
			<%= link_to('Deny', deny_photo_path(-1), {remote: true, class: 'deny', style: "display: #{@deny_button_css};"}) -%></li>
		</div>
				
		<div class="filenames">
			<%= render(partial: 'filename', collection: photo_section) -%>
		</div>
	</div>
	
	<div class="preview">
		<img style="display: <%= @preview_img_css -%>;" src="/photos/black.png">
		<p class="caption" style="display: <%= @preview_caption_css -%>;">&nbsp;</p>

		<table class="controls" style="display: <%= @preview_controls_css -%>;">
			<thead>
			</thead>
			<tbody>
				<tr>
					<th>Hold Time</th>
					<td><%= @control.hold_duration / 1000.0 -%> seconds</td>
				</tr>
				<tr>
					<th>Transition Time</th>
					<td><%= @control.transition_duration / 1000.0 -%> seconds</td>
				</tr>
				<tr>
					<th>Transition Type</th>
					<td><%= @control.transition_type -%></td>
				</tr>
			</tbody>
		</table>
	</div>

	<div class="clear_float">
	</div>
</div>
